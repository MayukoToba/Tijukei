<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:weightSum="1"
    android:background="@drawable/bg092_03">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="406dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="0.74"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重"
                android:id="@+id/textView"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="30dp"
                android:paddingRight="55dp"
                android:textColor="#ff5a5a"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身長"
                android:id="@+id/textView2"
                android:textSize="30dp"
                android:paddingLeft="60dp"
                android:textColor="#3e5df7"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <NumberPicker
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:id="@+id/numberPicker"
                android:layout_margin="20dp" />

            <NumberPicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numberPicker2"
                android:layout_margin="20dp" />
        </LinearLayout>

        <Button
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="GO!"
            android:id="@+id/button5"
            android:onClick="weightHome"
            android:background="@drawable/btn045_03"
            android:textColor="#ff2222"
            android:textStyle="bold|italic"
            android:textSize="30dp"
            android:layout_weight="0.14" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="記録"
            android:id="@+id/button6"
            android:onClick="weightCalendar"
            android:background="@drawable/btn057_05"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ホーム"
            android:id="@+id/button7"
            android:onClick="weightHome"
            android:background="@drawable/btn057_05"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="体重"
            android:id="@+id/button8"
            android:onClick="weightWeight"
            android:background="@drawable/btn057_05"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>
</LinearLayout>