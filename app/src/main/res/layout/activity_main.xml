<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/bg092_03">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="248dp"
            android:layout_height="294dp"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/karada" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75kg"
            android:id="@+id/weightButton"
            android:layout_gravity="center_horizontal"
            android:onClick="weightNum"
            android:background="@drawable/btn045_03" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="記録"
            android:id="@+id/button2"
            android:onClick="document"
            android:background="@drawable/btn057_05"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ホーム"
            android:id="@+id/button3"
            android:background="@drawable/btn057_05"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.04" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="体重"
            android:id="@+id/button4"
            android:onClick="weight"
            android:background="@drawable/btn057_05"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

</LinearLayout>
